<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gridview_image_width"
    android:layout_height="@dimen/gridview_image_height"
    android:padding="@dimen/gridview_item_margin" >

    <ImageView
        android:id="@+id/album_gridview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/no_art_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/item_wall"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/album_name"
            style="@style/item_wall" />

        <TextView
            android:id="@+id/album_artist"
            style="@style/item_wall" />
    </LinearLayout>

</FrameLayout>