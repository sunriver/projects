<?xml version="1.0" encoding="utf-8"?>
<com.funnyplayer.ui.widgets.LrcItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/bg" >

    <TextView
        android:id="@+id/lrc_item_artist"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector" />

    <TextView
        android:id="@+id/lrc_item_song"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector" />

    <ImageView
        android:id="@+id/lrc_item_download"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:src="@drawable/download" />

</com.funnyplayer.ui.widgets.LrcItemLayout>