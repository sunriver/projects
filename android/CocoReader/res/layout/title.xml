    <TextView
        android:id="@+id/tv_title_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/title_margin"
        android:gravity="center"
        android:text="sss"
        android:textColor="#fff" />

</LinearLayout>