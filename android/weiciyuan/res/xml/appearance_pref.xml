<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <PreferenceCategory
        android:title="@string/theme"
        >
        <ListPreference
            android:key="theme"
            android:title="@string/theme"
            android:dialogTitle="@string/theme"
            android:entries="@array/theme"
            android:entryValues="@array/theme_value"
            android:defaultValue="1"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/listview"
        >

        <ListPreference
            android:key="list_avatar_mode"
            android:title="@string/list_avatar_mode"
            android:dialogTitle="@string/list_avatar_mode"
            android:entries="@array/list_avatar_mode"
            android:entryValues="@array/list_avatar_mode_value"
            android:defaultValue="1"/>
        <ListPreference
            android:key="list_pic_mode"
            android:title="@string/list_pic_mode"
            android:dialogTitle="@string/list_pic_mode"
            android:entries="@array/list_pic_mode"
            android:entryValues="@array/list_pic_mode_value"
            android:defaultValue="1"/>

        <ListPreference
            android:key="list_high_pic_mode"
            android:title="@string/list_high_pic_mode"
            android:dialogTitle="@string/list_high_pic_mode"
            android:entries="@array/list_high_pic_mode"
            android:entryValues="@array/list_high_pic_mode_value"
            android:defaultValue="1"/>

        <ListPreference
            android:key="font_size"
            android:title="@string/font_size"
            android:dialogTitle="@string/font_size"
            android:entries="@array/font"
            android:entryValues="@array/font_value"
            android:defaultValue="15"/>

        <CheckBoxPreference
            android:key="list_fast_scroll"
            android:title="@string/fast_scroll"
            android:defaultValue="false"/>

    </PreferenceCategory>

</PreferenceScreen>